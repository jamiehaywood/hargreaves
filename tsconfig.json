{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES2015",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "lib": ["ESNext"],
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__/**", ".git", "node_modules", "src/test.ts"]
}
